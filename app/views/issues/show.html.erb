<% if user_signed_in? %>
	<%= link_to "Edit Issue", edit_issue_path(@issue), class: "pull-right" %>
	<br/>
<% end %>

<div class="hero-unit">
	<%= image_tag @issue.cover.url(:thumb), class: "pull-right" %>
	<h1><%= @issue.title %></h1>
	<p><%= @issue.description %></p>	
</div>

<div class="articles">


 
	<% for article in @issue.articles.order("position") %>

		<h1><%= link_to article.title, article %></h1>
		<h3 class="byline">By <%= article.author %></h3>
		<p class="lead summary"><%= article.summary %></p>
		<hr/>

	<% end %> 
</div>