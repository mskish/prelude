<% if user_signed_in? %>
	<%= link_to "Edit Article", edit_article_path(@article), class: "pull-right" %>
<% end %>

	<h1><%= @article.title %></h1>
<h3 class="byline">
  By <%= @article.author %>, 
  <%= @article.published_at.strftime("%B %-d, %Y") %>
</h3>
<p class="lead summary"><%= @article.summary %></p> 
<p><%= @article.content.html_safe %></p>


